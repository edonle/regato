<h1>Listar sites</h1>

<table>
  <tr>

    <th>Name</th>
	<th></th>
	<th></th>

  </tr>

<% @sites.each do |site| %>
  <tr>

    <td><%=h site.name %></td>

    <td><%= link_to 'Edit', edit_site_path(site) %></td>
    <td><%= link_to 'Destroy', site, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
<div id="paginate">
