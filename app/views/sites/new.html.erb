<h1>Novo site</h1>

<% form_for(@site) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :URL %><br />
    <%= f.text_field :url %>
  </p>
  <p>
    <%= f.label :Tags %><br />
    <%= f.text_field :tag_list %> (Separadas por virgulas)
  </p>
  <p>
    <%= f.submit 'Sugerir', :class => "button"%>
  </p>
<% end %>

<%= link_to 'Voltar', sites_path %>
